<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/topRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_41ssp"
        android:layout_marginLeft="@dimen/_14ssp"
        android:layout_marginEnd="@dimen/_15ssp"
        android:layout_marginRight="@dimen/_15ssp"
        >

        <Button
            android:id="@+id/storage"
            android:layout_width="@dimen/_90ssp"
            android:layout_height="@dimen/_33ssp"
            android:layout_below="@+id/scrollBar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_8ssp"
            android:layout_marginEnd="@dimen/_20ssp"
            android:layout_marginRight="@dimen/_50ssp"
            android:layout_marginBottom="@dimen/_7ssp"
            android:background="@drawable/rounded_btn"
            android:text="Storage"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />
        <Button
            android:id="@+id/Notification"
            android:layout_width="@dimen/_100ssp"
            android:layout_height="@dimen/_33ssp"
            android:layout_below="@+id/scrollBar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_8ssp"
            android:layout_marginEnd="@dimen/_20ssp"
            android:layout_marginRight="@dimen/_50ssp"
            android:layout_marginBottom="@dimen/_7ssp"
            android:background="@drawable/rounded_btn"
            android:text="Notification"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <Button
            android:id="@+id/Next"
            android:layout_width="@dimen/_70ssp"
            android:layout_height="@dimen/_33ssp"
            android:layout_gravity="center"
            android:layout_below="@+id/scrollBar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_58ssp"
            android:layout_marginEnd="@dimen/_20ssp"
            android:layout_marginRight="@dimen/_50ssp"
            android:layout_marginBottom="@dimen/_7ssp"
            android:background="@drawable/rounded_btn"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>

</RelativeLayout>